  <div class="container mt-5">
    <h2>Create Your Resume</h2>
    <form action="/home" method="post" enctype="multipart/form-data">
      <!-- Personal Details -->
      <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Personal Information </legend>
        <div class="row">
          <div class="mb-3">
            <label for="name" class="form-label">Full Name</label>
            <input name="name" type="text" class="form-control" id="name" placeholder="Enter your full name" required />
          </div>
      </fieldset>

      <!-- enter about yourself -->
      <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Tell Something About Yourself :- (Max 100 Words)</legend>
        <div class="mb-3">
          <textarea name="about" type="text" class="form-control" id="about" required
            style=" height: 100px; border: 1px solid #ccc; border-radius: 5px; padding: 5px; font-size: 14px;"></textarea>
        </div>
        <br>
        <label for="profilePicture">Upload your Profile Photo: Expected Ratio 1:1</label>
        <input type="file" id="profilePicture" name="profilePicture" accept="image/*" capture="environment" required>
      </fieldset>

      <!-- Contact -->
      <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Contact</legend>
        <div class="mb-3">
          <label for="phone" class="form-label">Phone Number :-</label>
          <input name="phone" type="text" class="form-control" id="phoneNumber" required />
          <label for="address" class="form-label">Address :-</label>
          <input name="address" type="text" class="form-control" id="phoneNumber" required />
          <label for="email" class="form-label">E-mail :-</label>
          <input name="email" type="text" class="form-control" id="email" required />
          <label for="url" class="form-label">URL :- </label>
          <input name="url" type="text" class="form-control" id="url"  />
      </fieldset>

      <!-- qualification -->

      <fieldset class="border p-3 mb-3">
        <legend class="w-auto">What position you are applying for?</legend>
        <input name="position" type="text" class="form-control" id="position" required />
        <br>
        <legend class="w-auto">Qualification</legend>
        <div class="mb-3">
          <label for="qualification" class="form-label">Education:- </label>
          <textarea name="qualification" type="text" class="form-control" id="qualification"
            placeholder="e.g., Bachelor's Degree" required
            style=" height: 100px; border: 1px solid #ccc; border-radius: 5px; padding: 5px; font-size: 14px;"></textarea>
        </div>
      </fieldset>

      <!-- Expertise -->
      <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Expertise</legend>
        <div class="mb-3">
          <label for="expertise" class="form-label">Skills & Expertise (Max 80 Words)</label>
          <textarea name="expertise" class="form-control" id="expertise" rows="3"
            placeholder="Enter your skills and expertise" required></textarea>
        </div>
      </fieldset>

      <!-- Languages -->
      <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Languages</legend>
        <div class="mb-3">
          <label for="languages" class="form-label">Languages Spoken</label>
          <input name="language" type="text" class="form-control" id="languages" placeholder="e.g., English, Spanish"
            required />
        </div>
      </fieldset>

      <!-- Work Experience -->
      <fieldset class="border p-3 mb-3 " id="section">
        <legend class="w-auto">Work Experience</legend>
        <div class="mb-3">
          <label for="company" class="form-label">Company Name</label>
          <input name="company" type="text" class="form-control" id="company" placeholder="Enter the company name "
            required />
        </div>
        <div class="mb-3">
          <label for="pos" class="form-label">Position</label>
          <input name="pos" type="text" class="form-control" id="pos" placeholder="Enter your job title" required />
        </div>
        <div class="mb-3">
          <label for="duration" class="form-label">Duration</label>
          <input name="duration" type="text" class="form-control" id="duration" placeholder="e.g., Jan 2020 - Dec 2023"
            required />
        </div>
        <br>
        <div class="mb-3">
          <label for="experience" class="form-label">Work Description (Max 80 Words)</label>
          <textarea name="experience" class="form-control" id="workDesc" rows="3"
            placeholder="Describe your responsibilities" required></textarea>
        </div>
        <!-- <button class="newCompany"
          style="background-color: #ff8900; border-radius: 7px; border-color: #f8f9fa; color: #f8f9fa; ">Add Company
          +</button> -->
      </fieldset>

      <!-- References -->
      <fieldset class="border p-3 mb-3">
        <legend class="w-auto">References</legend>
        <div class="mb-3">
          <label for="refname" class="form-label">Reference Name</label>
          <input name="refname" type="text" class="form-control" id="refName" placeholder="Enter reference name" />
        </div>
        <div class="mb-3">
          <label for="refcomp" class="form-label">Company/Position</label>
          <input name="refcomp" type="text" class="form-control" id="refContact"
            placeholder="Enter reference company details" />
        </div>
        <div class="mb-3">
          <label for="refcontact" class="form-label">Phone Contact</label>
          <input name="refcon" type="text" class="form-control" id="refName" placeholder="Enter reference Contact" />
        </div>
        <div class="mb-3">
          <label for="refemail" class="form-label">Email</label>
          <input name="refemail" type="text" class="form-control" id="refContact"
            placeholder="Enter reference Email Addres " />
        </div>
      </fieldset>

      <fieldset class="border p-3 mb-3">
        <legend class="w-auto">Choose Your Resume Format</legend>
        <div class="row">
          <div class="col-md-6 text-center">
            <label for="format1" class="form-label">Format 1</label>
            <img src="/Format 1.jpg" alt="Format 1 Preview"  class="img-fluid border mb-2">
            <div>
              <input type="radio" name="format" id="format1" value="format1" required>
              <label for="format1">Select</label>
            </div>
          </div>
          <div class="col-md-6 text-center">
            <label for="format2" class="form-label">Format 2</label>
            <img src="/Format 2.jpg" alt="Format 2 Preview" class="img-fluid border mb-2">
            <div>
              <input type="radio" name="format" id="format2" value="format2" required>
              <label for="format2">Select</label>
            </div>
          </div>
        </div>
      </fieldset>

      <div class="text-center">
        <button type="submit" class="submit-btn">Submit</button>
      </div>
    </form>
  </div>
  <footer class="bg-dark text-white text-center py-3 mt-5">
